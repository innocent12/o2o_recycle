      <!-- dubbo扫描包 -->
 	<dubbo:annotation package="user.service.impl" />
<!-- 使用dubbo发布服务 4步-->
<!-- 提供方应用信息 ，这个相当于起一个名字，我们dubbo管理页面比较清晰是哪个应用暴露出来的 -->
<dubbo:application name="recycle-user"/>
<!-- 在zookeeper注册中心 中注册服务 protocol协议
Address:地址 多个地址,用逗号 隔开 -->
<dubbo:registry address="localhost:2181" protocol="zookeeper" />
<!--<dubbo:registry address="N/A" /> 可以在开发时使用下 -->
<!-- 用dubbo协议 在20880端口暴露服务 -->
<dubbo:protocol name="dubbo" port="20882" host="localhost"/>
<!-- 主机端口 
<dubbo:protocol host="127.0.0.1" port="20880"/>-->
<!-- 声明需要暴露的服务接口 -->
<dubbo:service interface="user.service.AddressService" ref="addressServiceImpl" group="1" timeout="100000"/>
<dubbo:service interface="user.service.AdminlogService" ref="adminlogServiceImpl" group="1" timeout="100000"/>
<dubbo:service interface="user.service.AdminService" ref="adminServiceImpl" group="1" timeout="100000"/>
<dubbo:service interface="user.service.CollectorService" ref="collectorServiceImpl" group="1" timeout="100000"/>
<dubbo:service interface="user.service.SellerAddressService" ref="sellerAddressServiceImpl" group="1" timeout="100000"/>
<dubbo:service interface="user.service.SellerService" ref="sellerServiceImpl" group="1" timeout="100000"/>
</beans>